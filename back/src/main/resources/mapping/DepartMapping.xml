<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lansea.wms.mapper.DepartMapper">


    <sql id="selectBase">
        select
        t.*, cu.real_name create_user_name, uu.real_name update_user_name
        from depart t
        left join user cu on t.create_uid = cu.id
        left join user uu on t.update_uid = uu.id
    </sql>

    <!-- 根据 id 查找 -->
    <select id="findById" resultType="com.lansea.wms.model.Depart">
        <include refid="selectBase"></include>
        where t.id = #{id}
    </select>
    <!-- 按条件查找 -->
    <select id="selectWhere" resultType="com.lansea.wms.model.Depart">

        <include refid="selectBase"></include>
        <where>
            <if test="depart.code != null and depart.code != ''">
                t.code like '%${depart.code}%'
            </if>
            <if test="depart.name != null and depart.name != ''">
                t.name like '%${depart.name}%'
            </if>
        </where>
        <if test="sort.sortField != null and sort.sortField != ''">
            order by t.${sort.sortField} ${sort.sortOrder}
        </if>

    </select>
</mapper>