<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lansea.wms.mapper.DepartMapper">

    <sql id="sort">
        <if test="sort.sortField != null and sort.sortField != ''">
            order by ${sort.sortField} ${sort.sortOrder}
        </if>
    </sql>

    <!-- 按条件查找 -->
    <select id="selectWhere" resultType="com.lansea.wms.model.Depart">

        select * from depart
        <where>
            <if test="depart.code != null and depart.code != ''">
                code like '%${depart.code}%'
            </if>
            <if test="depart.name != null and depart.name != ''">
                name like '%${depart.name}%'
            </if>
        </where>
        <include refid="sort"></include>

    </select>
</mapper>